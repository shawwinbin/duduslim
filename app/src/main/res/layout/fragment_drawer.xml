<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout

            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:tag="1"
            android:clickable="true"
            android:background="@drawable/bg_menu"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首  页"
                style="@style/text_white_large"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <ImageView style="@style/left_drawer_arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_black2"

            />

        <RelativeLayout

            android:id="@+id/rl_record"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/bg_menu"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重记录"
                style="@style/text_white_large"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <ImageView style="@style/left_drawer_arrow" />
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_black2" />

        <RelativeLayout
            android:id="@+id/rl_daily"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"

            android:background="@drawable/bg_menu"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减肥日记"
                style="@style/text_white_large"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <ImageView style="@style/left_drawer_arrow" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_black2" />

        <RelativeLayout
            android:id="@+id/rl_train"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/bg_menu"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练计划"
                style="@style/text_white_large"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <ImageView style="@style/left_drawer_arrow" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_black2" />

        <RelativeLayout
            android:id="@+id/rl_tips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/bg_menu"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小贴士"
                style="@style/text_white_large"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <ImageView style="@style/left_drawer_arrow" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_black2" />



    </LinearLayout>
</ScrollView>
